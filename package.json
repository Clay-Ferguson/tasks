{
  "name": "task-manager",
  "displayName": "Tasks",
  "description": "A VSCode extension to manage and display files containing task hashtags",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Task Manager",
      "properties": {
        "task-manager.newTaskFolder": {
          "type": "string",
          "default": "",
          "description": "Folder where new task files will be created (relative to workspace root). Leave empty to create in workspace root."
        }
      }
    },
    "commands": [
      {
        "command": "task-manager.showAllTasks",
        "title": "All Tasks",
        "icon": "$(list-unordered)"
      },
      {
        "command": "task-manager.showTasksDueSoon",
        "title": "Tasks Due Soon",
        "icon": "$(calendar)"
      },
      {
        "command": "task-manager.showTasksOverdue",
        "title": "Tasks Overdue",
        "icon": "$(warning)"
      },
      {
        "command": "task-manager.insertTimestamp",
        "title": "Insert Timestamp"
      },
      {
        "command": "task-manager.filterPriority",
        "title": "Filter Priority",
        "icon": "$(filter)"
      },
      {
        "command": "task-manager.newTask",
        "title": "New Task",
        "icon": "$(add)"
      },
      {
        "command": "task-manager.about",
        "title": "About...",
        "icon": "$(info)"
      },
      {
        "command": "task-manager.addDay",
        "title": "+Day"
      },
      {
        "command": "task-manager.addWeek",
        "title": "+Week"
      },
      {
        "command": "task-manager.addMonth",
        "title": "+Month"
      },
      {
        "command": "task-manager.addYear",
        "title": "+Year"
      }
    ],
    "views": {
      "taskManager": [
        {
          "id": "taskExplorer",
          "name": "Tasks"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taskManager",
          "title": "Tasks",
          "icon": "$(checklist)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "task-manager.showAllTasks",
          "when": "view == taskExplorer",
          "group": "navigation@1"
        },
        {
          "command": "task-manager.showTasksDueSoon",
          "when": "view == taskExplorer",
          "group": "navigation@2"
        },
        {
          "command": "task-manager.showTasksOverdue",
          "when": "view == taskExplorer",
          "group": "navigation@3"
        },
        {
          "command": "task-manager.filterPriority",
          "when": "view == taskExplorer",
          "group": "navigation@4"
        },
        {
          "command": "task-manager.newTask",
          "when": "view == taskExplorer",
          "group": "navigation@5"
        },
        {
          "command": "task-manager.about",
          "when": "view == taskExplorer",
          "group": "1_about"
        }
      ],
      "view/context": [
        {
          "command": "task-manager.about",
          "when": "view == taskExplorer",
          "group": "1_about@1"
        }
      ],
      "view/item/context": [
        {
          "command": "task-manager.addDay",
          "when": "view == taskExplorer && viewItem == taskWithTimestamp",
          "group": "1_dateExtension@1"
        },
        {
          "command": "task-manager.addWeek",
          "when": "view == taskExplorer && viewItem == taskWithTimestamp",
          "group": "1_dateExtension@2"
        },
        {
          "command": "task-manager.addMonth",
          "when": "view == taskExplorer && viewItem == taskWithTimestamp",
          "group": "1_dateExtension@3"
        },
        {
          "command": "task-manager.addYear",
          "when": "view == taskExplorer && viewItem == taskWithTimestamp",
          "group": "1_dateExtension@4"
        },
        {
          "command": "task-manager.about",
          "when": "view == taskExplorer",
          "group": "2_about@1"
        }
      ],
      "commandPalette": [
        {
          "command": "task-manager.showAllTasks"
        },
        {
          "command": "task-manager.showTasksDueSoon"
        },
        {
          "command": "task-manager.showTasksOverdue"
        },
        {
          "command": "task-manager.insertTimestamp"
        },
        {
          "command": "task-manager.newTask"
        },
        {
          "command": "task-manager.about"
        }
      ],
      "editor/context": [
        {
          "command": "task-manager.insertTimestamp",
          "group": "z_commands"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
