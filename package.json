{
  "name": "task-manager",
  "displayName": "Task Manager",
  "description": "A VSCode extension to manage and display files containing task hashtags",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "task-manager.showAllTasks",
        "title": "Show all Tasks",
        "icon": "$(list-unordered)"
      },
      {
        "command": "task-manager.refreshTasks",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "taskManager": [
        {
          "id": "taskExplorer",
          "name": "Task Files"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taskManager",
          "title": "Task Manager",
          "icon": "$(checklist)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "task-manager.refreshTasks",
          "when": "view == taskExplorer",
          "group": "navigation"
        },
        {
          "command": "task-manager.showAllTasks",
          "when": "view == taskExplorer",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "task-manager.showAllTasks"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
